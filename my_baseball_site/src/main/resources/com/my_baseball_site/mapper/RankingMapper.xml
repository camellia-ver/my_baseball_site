<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" 
    "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.my_baseball_site.mapper.RankingMapper">
    <select id="selectRankingByDate" resultType="com.my_baseball_site.vo.RankingVO">
        select * from ranking where r_date = #{date}
    </select>
    <select id="selectRankingLast" resultType="com.my_baseball_site.vo.RankingVO">
        <![CDATA[select * from ranking where r_date < #{date} order by r_date desc,no asc limit 10]]>
    </select>
    <select id="selectYear" resultType="java.lang.Integer">
        select distinct year(r_date) as years from ranking order by years desc
    </select>
    <select id="selectStartDate" resultType="java.util.Date">
        select r_date from ranking where r_date > #{date} order by r_date limit 1
    </select>
</mapper>